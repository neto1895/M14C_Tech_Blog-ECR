<h1>{{title}}</h1>
<p>Written by: {{user.name}}</p>

{{#if comments}}
  <h2>Comments:</h2>
  <ul>
    {{#each comments}}
      <li>
        <p>{{content}}</p>
        <p>Posted by: {{user.name}}</p>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No comments found.</p>
{{/if}}

{{#if logged_in}}
  <!-- Render additional content for logged-in users -->
{{else}}
  <!-- Render content for non-logged-in users -->
{{/if}}










<div class="card">
  <div class="card-header" >
    <h5>{{title}}</h5> 
    <p>posted by {{user.name}} on {{format_date date_created}}</p>
  </div>
  <div class="card-body">
    <p class="card-text">{{content}}</p>
  </div>
  <div class="card-footer text-body-secondary" data-bs-toggle="collapse" href="#AddCommentSection" role="button" aria-expanded="false" aria-controls="collapseExample">
    Add Comment
  </div>


  
  <div class="card-body collapse" id="AddCommentSection">
    <h5 class="card-AddComment">Join the conversation</h5>
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="newComment" >
      <label for="floatingInput">Add new comment</label>
    </div>
    <a href="#" class="btn btn-primary">Submit</a>

  </div>
</div>

