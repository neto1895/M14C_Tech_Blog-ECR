{{!-- Displays the data of the blogpost id selected --}}
<div class="card">
  <div class="card-header" >
    <h5>{{title}}</h5> 
    <p>posted by {{user.name}} on {{format_date date_created}}</p>
  </div>
  <div class="card-body">
  <p class="card-text">{{content}}</p>
  </div>

  {{!-- Bootstrap code for collapse new comment --}}
  <div class="card-footer text-body-secondary" data-bs-toggle="collapse" href="#AddCommentSection" role="button" aria-expanded="false" aria-controls="collapseExample">
  Add Comment
  </div>

  <div class="card-body collapse" id="AddCommentSection">
    <h5 class="card-AddComment">Join the conversation</h5>
      <form class="newCommentForm">
        <div class="form-floating mb-3">
          <input type="text" class="form-control" id="newCommentContent" >
          <label for="floatingInput">Add new comment</label>
        </div>
        <a onclick="newCommentEntry()" type="submit" class="btn btn-primary">Submit</a>
      </form>
  </div>
</div>

{{!-- Display the comments from the corresponding ID if any --}}
{{#if comments}}
<div class="card">
  <div class="card-header">Comments</div>
{{#each comments}}

<div class="card-body">
    <p class="card-text"> {{content}} </p>
    <p class="card-userDate">Posted by: {{user.name}} on  {{format_date date_created}} </p>
</div>
<div class="card-header"></div>
{{/each}}
{{else}}
<div class="card-header"></div>
  <p>No comments found.</p>
{{/if}}









{{!-- script for the bootstrap code functionality --}}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/blogpost.js"></script>